{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend && npm ci && npm run build",
    "env": {
      "NODE_VERSION": "20.19.0"
    }
  },
  "deploy": {
    "startCommand": "cd frontend && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
